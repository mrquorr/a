#!/usr/bin/env bash
set -euo pipefail
if [[ $# -lt 1 ]]; then
  echo "Usage: bin/round2 <participant_id>" >&2
  exit 1
fi
python scripts/prepare_workspace.py "$1" 2
echo "Round 2 ready in assignments/round2"

(sleep 540 && echo "Time is over! Please submit what you have with bin/submit2 $PID <confidence_level> --push" ) &
WARNING_PID=$!

(sleep 600 && bin/submit2 $PID 0 --push ) &
AUTOPUSH_PID=$!